@model SAEIS.WebSite.Models.InfoViewModel
<div class="row">
    <div class="col-md-3">
        <div class="m-3">
            <div class="card">
                <h5 class="card-header">Filters</h5>
                <div class="card-body">
                    <form class="card-text">
                        <div class="form-group row">
                            <label asp-for="DatasetType" class="col-md-3 col-form-label"></label>
                            <select asp-for="DatasetType" asp-items="Model.DatasetTypes" class="col-md form-control mr-3" onchange="Info.UpdateDatasetFilters()"></select>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DatasetSubType" class="col-md-3 col-form-label"></label>
                            <select asp-for="DatasetSubType" asp-items="Model.DatasetSubTypes" class="col-md form-control mr-3" onchange="Info.UpdateDatasetFilters()"></select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
    </div>
</div>
<div class="row">
    <div class="col-md">
        <div class="m-3">
            <div class="card">
                <h5 class="card-header">Datasets</h5>
                <div class="card-body">
                    <div id="tableDatasets"></div>
                </div>
            </div>
        </div>
    </div>
</div>
