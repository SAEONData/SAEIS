@model SAEIS.WebSite.Models.InfoViewModel
<div class="row">
    <div class="col-md-3">
        <div class="m-3">
            <div class="card">
                <h5 class="card-header">Filters</h5>
                <div class="card-body">
                    <form class="card-text">
                        <div class="form-group row">
                            <label asp-for="LiteratureType" class="col-md-3 col-form-label"></label>
                            <select asp-for="LiteratureType" asp-items="Model.LiteratureTypes" class="col-md form-control mr-3" onchange="Info.UpdateLiteratureFilters()"></select>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LiteratureSubType" class="col-md-3 col-form-label"></label>
                            <select asp-for="LiteratureSubType" asp-items="Model.LiteratureSubTypes" class="col-md form-control mr-3" onchange="Info.UpdateLiteratureFilters()"></select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md">
    </div>
</div>
<div class="row">
    <div class="col-md">
        <div class="m-3">
            <div class="card">
                <h5 class="card-header">Literature</h5>
                <div class="card-body">
                    <div id="tableLiterature"></div>
                </div>
            </div>
        </div>
    </div>
</div>
